<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.ucsb.cs.cs185.photojournal.photojournal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="25" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.ucsb.cs.cs185.photojournal.photojournal.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.ucsb.cs.cs185.photojournal.photojournal.LoginActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name="edu.ucsb.cs.cs185.photojournal.photojournal.SignUpActivity"
            android:theme="@style/AppTheme.Light" />
        <activity android:name="edu.ucsb.cs.cs185.photojournal.photojournal.PhotoViewActivity" />
        <activity
            android:name="edu.ucsb.cs.cs185.photojournal.photojournal.PhotoEditorActivity"
            android:label="@string/title_activity_photo_editor"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>